# Configuration file for toggling dependencies during Docker build
# Set to 'true' to install, 'false' to skip

# System tools: vim, tmux, wget, openssh server
INSTALL_SYSTEM=true

# Runtimes: nodejs, bun, deno
INSTALL_RUNTIMES=true

# CLIs: code-server, claude-cli, github-copilot-cli, opencode-cli
# Note: Gemini CLI not included as no official CLI exists
INSTALL_CLIS=true

# Root password for SSH access
ROOT_PASSWORD=password